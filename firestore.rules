rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ==================== HELPER FUNCTIONS ====================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // ==================== USERS COLLECTION ====================

    match /users/{userId} {
      // Barchasi o'qiy oladi (leaderboard uchun)
      allow read: if isSignedIn();

      // Faqat o'z accountini yaratish
      allow create: if isSignedIn() && request.auth.uid == userId;

      // O'z accountini yangilash
      allow update: if isSignedIn() && request.auth.uid == userId;

      // Adminlar har qanday userni yangilashi mumkin
      allow update: if isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;

      // Referral tizimi - boshqa userning faqat coins va referralCount ni yangilash
      allow update: if isSignedIn() &&
        request.auth.uid != userId &&
        // Faqat bu fieldlar o'zgarishi mumkin
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['coins', 'totalCoinsEarned', 'referralCount']) &&
        // coins va totalCoinsEarned faqat oshishi mumkin
        request.resource.data.coins >= resource.data.coins &&
        request.resource.data.totalCoinsEarned >= resource.data.totalCoinsEarned &&
        // referralCount faqat 1 ga oshishi mumkin
        request.resource.data.referralCount == resource.data.referralCount + 1;

      // Faqat adminlar o'chirishi mumkin
      allow delete: if isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;

      // ---------- EXCHANGES SUBCOLLECTION ----------
      match /exchanges/{exchangeId} {
        // O'z exchangelarini yoki adminlar ko'rishi mumkin
        allow read: if isSignedIn() && (
          request.auth.uid == userId ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true
        );

        // Faqat o'z exchangelarini yaratish
        allow create: if isSignedIn() && request.auth.uid == userId;

        // Faqat adminlar update/delete qilishi mumkin
        allow update, delete: if isSignedIn() &&
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      }
    }

    // ==================== TASKS COLLECTION ====================

    match /tasks/{taskId} {
      // Barchasi o'qiy oladi
      allow read: if isSignedIn();

      // Faqat adminlar yozishi mumkin
      allow write: if isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // ==================== TASK COMPLETIONS ====================

    match /task_completions/{completionId} {
      // Barchasi o'qiy oladi (statistika uchun)
      allow read: if isSignedIn();

      // Faqat o'z completionini yaratish
      allow create: if isSignedIn() &&
        request.auth.uid == request.resource.data.uid;

      // Update va delete yo'q
      allow update, delete: if false;
    }

    // ==================== SETTINGS COLLECTION ====================

    match /settings/{document} {
      // Barchasi o'qiy oladi (public settings)
      allow read: if isSignedIn();

      // Faqat adminlar yozishi mumkin
      allow write: if isSignedIn() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
